<div class="col-8">
  <div class="card-show">
    <%= image_tag post.get_post_image, width: "100%", height: "100%" %>
    <div class="card-date">
      <strong>投稿日</strong>：<%= post.created_at.strftime('%Y/%m/%d') %>
    </div>
    <div class="card-member-name">
      <strong>ユーザー名</strong>：<%= post.member.name %>
    </div>
    <div class="card-title">
      <strong>タイトル</strong>：<%= post.title %>
    </div>
    <div class="card-detail">
      <strong>投稿者コメント</strong>：<%= post.detail %>
    </div>
    <div class="card-tag">
      <% tag_posts.each do |tag| %>
        <i class="fas fa-tag"></i>
        <%= link_to tag.name, tag_posts_path(tag_id: tag.id) %>
        <%= "(#{tag.posts.count})" %>
      <% end %>
    </div>
    <div class="card-delete-admin">
        <%= button_to "削除する", admin_post_path(post), method: :delete, data: { confirm: "本当に削除してもいいですか？" }, class: "btn btn-danger card-delete-admin" %>
    </div>
  </div>
</div>